@using Microsoft.AspNetCore.Mvc.TagHelpers
@model NewSite.ViewModels.News.NewsAddViewModel
@{
    Layout = null;
    var drpCats = (SelectList)ViewBag.Categories;
}

<form method="post" data-action="Add"  data-controller="News" enctype="multipart/form-data" data-ajax="true" >
    <table class="table table-bordered table-hover table-striped table-sm">
        <tr>
            <td>NewsTitle</td>
            <td>
                <input type="text" class="form-control" asp-for="NewsTitle" placeholder="NewsTitle" />
                <span class="text-danger" asp-validation-for="NewsTitle"></span>
            </td>

        </tr>
        <tr>
            <td>NewsCategoryId</td>
            <td> <select asp-items="drpCats" asp-for="NewsCategoryId" class="form-control"></select> </td>
        </tr>
        <tr>
            <td>Slug</td>
            <td>
                <input type="text" class="form-control" asp-for="Slug" placeholder="Slug"/>
                <span class="text-danger" asp-validation-for="Slug"></span>
            </td>
           
        </tr>
        <tr>
            <td>SmallDescription</td>
            <td>
                <input type="text" class="form-control" asp-for="SmallDescription" placeholder="SmallDescription" />
                <span class="text-danger" asp-validation-for="SmallDescription"></span>
            </td>
            
        </tr>
        <tr>
            <td>NewsText</td>
            <td> <input type="text" class="form-control" asp-for="NewsText" placeholder="NewsText" /> </td>
        </tr>

        <tr>
            <td>Picture</td>
            <td> <input type="file" class="form-control" asp-for="Picture" placeholder="Picture" /> </td>
        </tr>
        <tr class="text-center">
            <td colspan="2">
                <button type="submit" class="btn btn-primary btn-sm">Save</button>
            </td>
        </tr>
    </table>
</form>

