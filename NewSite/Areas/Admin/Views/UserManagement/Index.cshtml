@model IEnumerable<NewSite.ViewModels.Security.UserListItem>

@{
    ViewData["Title"] = "مدیریت کاربران";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="AddNewUser" asp-controller="UserManagement" class="btn btn-primary"> ایجاد کاربر جدید</a>
</p>
@if (Model.Any()==false)
{
    <tr class="text-center">
        <td colspan="5">
            <h5 class="text-danger">ایتمی جهت نمایش وجود ندارذ</h5>
        </td>
    </tr>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>
               نام
            </th>
            <th>
                فامیلی
            </th>
            <th>
             نام کاربری
            </th>
            <th>
             نقش کاربر
            </th>
            <th>
                عملیات
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoleName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditUser", new { userId=item.UserId } ,new{@class="btn btn-info btn-sm"}) |
                    @Html.ActionLink("Delete", "DeleteUser", new { userId=item.UserId}, new { @class = "btn btn-danger btn-sm" }) 
                </td>
            </tr>
        }
        </tbody>
    </table>
}
